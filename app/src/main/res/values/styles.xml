<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.Movie.NoActionBar">
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">true</item>
        <item name="colorPrimary">#F31628</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>


        />
    </style>



    <style name="roundedImageView" parent="">
        <item name="cornerSize">10dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="color">@color/cardview_dark_background</item>



    </style>
    
    <style name="AppTheme.PopMe">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>


    </style>

    <style name="SplashStyle"
        parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/spash_background</item>
    </style>



</resources>