<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="20dp"

    android:gravity="center">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="@drawable/custom_rounded_corner_white"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/grid_image_item1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/roundedImageView"

            app:srcCompat="@drawable/post" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/grid_image_item2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginStart="36dp"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:scaleType="fitXY"

            android:elevation="2dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/grid_image_item3"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:elevation="1dp"

            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/roundedImageView" />


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/grid_item_name"
        android:text="most Popular lsdkfgsl"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:layout_marginTop="6dp"/>

</LinearLayout>